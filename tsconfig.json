{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "module": "ES2022",
    "moduleResolution": "Node",
    "target": "es6",
    "paths": {
      "@hooks/*": ["hooks/*"],
      "@components/*": ["components/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
